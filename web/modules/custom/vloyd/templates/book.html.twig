<div class="book_table">
  <div class="book_table-basic">
    <div class="book_table-publishedByOn book_table-author">
      <p class="book_table-publishedByOn-title">Published by: </p>
      <ul class="book_table-publishedByOn-list">
        <li>
          <div class="book_name_created_wrapper">
            <div class="book_item book_name">
              {{ content.name }}
            </div>
            <p class="book_prefixes book_label"> at </p>
            <div class="book_created">
              {{ content.created }}
            </div>
          </div>
        </li>
        <li>
          <div class="book_email_wrapper">
            <p class="book_email book_label">Email: </p>
            <p class="book_email_item book_item">
              {{ content.email }}
            </p>
          </div>
        </li>
        <li>
          <div class="book_phone_wrapper">
            <p class="book_phone book_label">Phone Number: </p>
            <p class="book_phone_item book_item">
            {{ content.phone }}
            </p>
          </div>
        </li>
        <li class="book_avatar_wrapper">
          <div class="book_item book_avatar">
            <p class="book_avatar_text book_label">Avatar: </p>
            {{ content.avatar }}
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class="book_table-main">
    <ul class="book_table-main_list">
      <li class="book_review_wrapper">
        <div class="book_review book_item">
          <p class="book_review_text book_label">Review: </p>
          <p class="book_review book_review-item book_item">{{ content.review }}</p>
        </div>
      </li>
        {% if content.image %}
      <li class="book_image_wrapper">
        <div class="book_item book_image">
          <p class="book_image_text book_label">Image: </p>
          {{ content.image}}
        </div>
      </li>
        {% endif %}
    </ul>
    {% if user.hasPermission('administer nodes') %}
      <div class="book_administer_buttons">
        {{ button }}
      </div>
    {% endif %}
  </div>
</div>
